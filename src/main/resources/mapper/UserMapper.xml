<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.newx.api.auth.mapper.UserMapper">
    <select id="findByUsername" parameterType="string" resultType="com.newx.api.auth.entity.User">
        SELECT * FROM user WHERE username = #{username}
    </select>

    <select id="findByUsernameAndPassword" parameterType="map" resultType="com.newx.api.auth.entity.User">
        SELECT * FROM user WHERE username = #{username} AND password = #{password}
    </select>
</mapper>